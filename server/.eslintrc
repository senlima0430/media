{
  "parser": "babel-eslint",
  "env": {
    "jest/globals": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "standard",
    "plugin:jest/recommended",
    "prettier",
    "prettier/babel",
    "prettier/standard"
  ],
  "plugins": ["jest", "prettier"],
  "rules": {
    "import/prefer-default-export": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ]
  },
  "ignorePatterns": ["__snapshots__"]
}
